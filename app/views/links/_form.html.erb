<%= render('layouts/errors', :object => @link) %>

<%= form_for @link do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit(class: "btn btn-primary") %>
<% end %>
